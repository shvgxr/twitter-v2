<h5>Edit Tweet</h5>
<div class="row">
    <form action="/tweets/{{tweet._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <label for="privacy">Tweet privacy</label>
                <select id="privacy" name="privacy">
                    {{#select tweet.privacy}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Write your tweet:</h5>
                <textarea id="body" name="body">{{tweet.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="update" class="btn" style="background-color:#2196f3">
            <a href="/tweets" class="btn blue">Cancel</a>
        </div>
    </form>
</div>