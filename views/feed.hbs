<h5>Feed</h5>
<h3>Welcome {{{name}}}</h3>
<p>Here is your feed</p>
{{#if tweets}}
    <table class="striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Tweet</th>
                <th>Likes</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each tweets}}
                <tr>
                    <td><a href="/tweets/{{_id}}">{{user.displayName}}</a></td>
                    <td><span class="dash-tweet">{{body}}</span></td>
                    <td><p>{{likes}}</p></td>
                    <td>{{formatDate createdAt 'D MMMM YYYY h:mm:ss a'}}</td>
                    <td>
                        <a href="/tweets/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/tweets/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>There are no tweets</p>
{{/if}}